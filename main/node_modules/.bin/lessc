#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../.store/less@4.1.3/node_modules/less/bin/lessc" "$@"
  ret=$?
else 
  node  "$basedir/../.store/less@4.1.3/node_modules/less/bin/lessc" "$@"
  ret=$?
fi
exit $ret
